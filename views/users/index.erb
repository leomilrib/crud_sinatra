<p><%= "Users on database: #{@users.size}" %></p>

<table>
  <tr>
    <th>Name</th>
    <th>Login</th>
    <th>URL</th>
    <th colspan="2">Action</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><a href="/users/<%= user[:id] %>"> <%= user[:name] %> </a></td>
      <td><%= user[:login] %></td>
      <td><%= user[:url] %></td>
      <td><a href="/users/kill/<%= user[:id] %>">Delete</a></td>
      <td><a href="/users/edit/<%= user[:id] %>">Edit</a></td>
    </tr>
  <% end %>
</table>

<ul>
  <li>
    <a href="/users/create">Create</a>
  </li>
</ul>
